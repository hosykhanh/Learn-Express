<div class="mt-4">
  <h3>Cập nhật khóa học</h3>

  <form class="mt-4" method="POST" action="/courses/{{course._id}}?_method=PUT">
    <div class="mb-3">
      <label for="name" class="form-label">Tên khóa học</label>
      <input
        type="text"
        class="form-control"
        value="{{course.name}}"
        id="name"
        name="name"
      />
      <label for="description" class="form-label">Mô tả</label>
      <textarea
        class="form-control"
        id="description"
        name="description"
      >{{course.description}}</textarea>
      <label for="videoId" class="form-label">Video Id</label>
      <input
        type="text"
        class="form-control"
        value="{{course.videoId}}"
        id="videoId"
        name="videoId"
      />
      <label for="level" class="form-label">Trình độ</label>
      <input
        type="text"
        class="form-control"
        value="{{course.level}}"
        id="level"
        name="level"
      />
      <label for="image" class="form-label">Image</label>
      <input
        type="text"
        class="form-control"
        value="{{course.image}}"
        id="image"
        name="image"
      />
    </div>

    <button type="submit" class="btn btn-primary">Lưu</button>
  </form>
</div>